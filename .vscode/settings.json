    "editor.tabSize": 8, // Đặt kích thước tab cho file CSS thành 2 dấu cách
    "editor.insertSpaces": true // Sử dụng dấu cách thay vì tab khi nhấn Tab trong file CSS
  },
  "editor.tabSize": 8,
  "editor.detectIndentation": true
}
